 // c++ program for class and object define

#include<iostream>
using namespace std;

class student{
	
	public: // access specificer public,private,protected by_dfault private
	int id;
	string name;
	
	void getdata() // member function or method
	{
		cout<<id<<"id is="<<name<<"name is="<<endl;
	}
};

int main()
{
	student s1; //obeject define
	s1.id=101;
	s1.name="ekta";
	cout<<endl<<s1.name;
}

// SWITCH CASE STATEMENT

#include<iostream>
using namespace std;

int main()
{
	int num
	cout<<"enter any number:";
	cin>>num;
	switch(num)
	{
		case 1: cout<<" A ";
		break;
		
		case 1: cout<<" A ";
		break;
		
		case 1: cout<<" A ";
		break;
		
		default:
		cout<<"invalid";case 1: cout<<" A ";
		break;
	}
}

